{
  "name": "@mcm/mcm-api",
  "version": "0.0.1",
  "description": "",
  "keywords": [
    "loopback-application",
    "loopback"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "scripts": {
    "build": "lb-tsc",
    "postbuild": "npm run copy-ejs-files",
    "build:watch": "lb-tsc --watch",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write",
    "eslint": "lb-eslint --report-unused-disable-directives .",
    "eslint:fix": "npm run eslint -- --fix",
    "pretest": "npm run rebuild",
    "test": "nyc lb-mocha --allow-console-logs \"dist/__tests__\"",
    "posttest": "npm run lint",
    "test:dev": "lb-mocha --allow-console-logs dist/__tests__/**/*.js && npm run posttest",
    "docker:build": "docker build -t api .",
    "docker:run": "docker run -p 3000:3000 -d api",
    "premigrate": "npm run build",
    "migrate": "node ./dist/migrate",
    "preopenapi-spec": "npm run build",
    "openapi-spec": "node ./dist/openapi-spec",
    "prestart": "npm run rebuild",
    "start": "node -r source-map-support/register .",
    "clean": "lb-clean dist *.tsbuildinfo .eslintcache",
    "start:watch": "tsc-watch --target es2017 --outDir ./dist --onSuccess \"node .\"",
    "rebuild": "npm run clean && npm run build",
    "verify": "sonarqube-verify",
    "coverage": "nyc report --reporter=lcovonly",
    "copy-ejs-files": "copyfiles -u 1 src/**/**.ejs dist/",
    "prepare": "cd .. &&  husky install api/.husky"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "BARGACH, Tarek <tarek.bargach@capgemini.com>",
  "license": "",
  "files": [
    "README.md",
    "dist",
    "src",
    "!*/__tests__"
  ],
  "dependencies": {
    "@aws-sdk/client-s3": "3.24.0",
    "@aws-sdk/s3-request-presigner": "^3.24.0",
    "@loopback/authentication": "^7.3.0",
    "@loopback/authorization": "^0.9.2",
    "@loopback/boot": "^3.4.0",
    "@loopback/build": "^6.4.0",
    "@loopback/core": "^2.16.0",
    "@loopback/cron": "^0.8.2",
    "@loopback/repository": "^3.6.0",
    "@loopback/rest": "^9.3.0",
    "@loopback/rest-explorer": "^3.3.0",
    "@loopback/service-proxy": "^3.2.0",
    "@sendgrid/mail": "^7.4.4",
    "@types/amqplib": "^0.8.2",
    "@types/ejs": "^3.1.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/mocha": "^8.2.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.3.3",
    "@types/nodemailer": "^6.4.4",
    "amqplib": "^0.8.0",
    "copyfiles": "^2.4.1",
    "date-fns": "^2.21.1",
    "ejs": "^3.1.6",
    "email-validator": "^2.0.4",
    "exceljs": "^4.3.0",
    "html-pdf": "^3.0.1",
    "jsonschema": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "keycloak-admin": "^1.14.17",
    "keycloak-verify": "^0.4.0",
    "loopback-connector-mongodb": "^6.0.1",
    "loopback-connector-postgresql": "^5.5.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.7.2",
    "strong-error-handler": "^4.0.0",
    "superagent": "^6.1.0",
    "tsc-watch": "^4.2.9",
    "tslib": "^2.0.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@loopback/eslint-config": "^10.2.0",
    "@loopback/testlab": "^3.4.0",
    "@types/html-pdf": "^3.0.0",
    "date-fns-tz": "^1.2.2",
    "eslint": "^7.30.0",
    "eslint-config-loopback": "^13.1.0",
    "husky": "^7.0.4",
    "mocha": "^8.4.0",
    "mocha-junit-reporter": "^2.0.0",
    "nyc": "^15.1.0",
    "regenerator-runtime": "^0.13.9",
    "sonarqube-verify": "^1.0.2",
    "source-map-support": "^0.5.19",
    "typescript": "~4.2.4"
  }
}
